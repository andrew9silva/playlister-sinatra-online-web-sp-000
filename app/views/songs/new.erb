<h1>Create New Song: </h1>

<form action='/songs' method='POST'>
  <label>Name: </label><input type="text" name="song[name]" id="Name">
  <label>Artist: </label><input type="text" name="song[artist]" id="Artist Name">
  <label>Genre: </label>
  <% @genres.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="song[genres][]" value="<%= genre.id %>,%= genre.name %>">
  <% end %>
  <input type="submit" value="Create Song">
</form>
